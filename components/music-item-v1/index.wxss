/* components/music-item-v1/index.wxss */
.item{
  width: 710rpx;
  height: 130rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.item-image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  overflow: hidden;
}
.item-image-img{
  width: 100%;
  height: 100%;
}
.item-text{
  width: 500rpx;
  height: 120rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.item-title{
  font-size: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  width: 500rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.item-name{
  width: 500rpx;
  color: #aaa;
  font-size: 26rpx;
  line-height: 28rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  -webkit-box-orient: vertical;
}
.item-more{
  width: 50rpx;
  height: 120rpx;
  position: relative;
}
.item-more-icon{
  position: absolute;
  top: 56rpx;
  right: 22rpx;
  width: 17rpx;
  height: 17rpx;
  border-top: 1px solid #949191;
  border-right: 1px solid #949191;
  transform: rotate(45deg);
}