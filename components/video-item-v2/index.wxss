/* components/video-item-v2/index.wxss */
.item{
  width: 690rpx;
  height: 130rpx;
  margin: 20rpx 0;
  display: flex;
}
.item-img{
  width: 230rpx;
  height: 130rpx;
  position: relative;
}
.item-img-image{
  width: 100%;
  height: 100%;
}
.item-count{
  position: absolute;
  right: 0rpx;
  bottom: 1rpx;
  font-size: 24rpx;
  padding: 3rpx 7rpx;
  background-color: rgba(0,0,0,0.7);
  color: #fff;
  border-radius: 8rpx;
}
.item-text{
  flex: 1;
  height: 130rpx;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
  margin-left: 16rpx;
}
.item-title{
  font-size: 30rpx;
  height: 80rpx;
  width: 100%;
  text-overflow: ellipsis;
  display: -webkit-block;
  -webkit-line-clamp: 2;
  overflow: hidden;
  -webkit-box-orient: vertical;
}
.item-name{
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
}