.music-slider{
  margin: 20rpx 0;
}
.music-bar{
  margin: 10px 6px;
}
.music-text{
  display: flex;
  justify-content: space-between;
}
.start-time,.end-time{
  font-size: 26rpx;
}

.music-buttons{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.music-buttons .icon{
  width: 70rpx;
}
.music-buttons .icon:nth-child(3){
  width: 120rpx;
}



/* 歌词内容 */
.lyric-scroll{
  position: relative;
  height: 100%;
  box-sizing: border-box;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.lyric-list{
  color: #ccc;
}
.lyric-list::after{
  content: "";
  position: relative;
  width: 50px;
  height: 50px;
}

.lyric-item{
  width: 690rpx;
  font-size: 30rpx;
  text-align: center;
  transition: 1s;
  white-space: nowrap;
  overflow: hidden;
  height: 70rpx;
  line-height: 70rpx;
  text-overflow: ellipsis;
  /*歌词滚动样式 */
  background: #fff -webkit-linear-gradient(left, #ff9a3c, #ff9a3c) no-repeat 0 0;
  -webkit-text-fill-color:transparent;
  -webkit-background-clip:text;
  background-size:0 100%;
}
.active-lyric{
  font-size: 36rpx;
  color: #ff9a3c;
  animation: lyricMove 2s linear;
  animation-fill-mode:forwards;
}
@keyframes lyricMove{
  from{
    background-size:0 100%;
  }
  to{
    background-size:100% 100%;
  }
}