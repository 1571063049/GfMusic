/* pages/player-detail/index.wxss */
page{
  padding: 0;
  color: #fff;
}
/* 背景 */
.bg-image,.bg-cover{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  z-index: -1;
}
.bg-cover{
  background-color: rgba(0,0,0,0.5);
  backdrop-filter: blur(40rpx);
}

/* 头部 */
.tab{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.tab-line{
  width: 2px;
  height: 30rpx;
  margin: 0 8px;
  background-color: #fff;
}

/* 内容 */
.content{
  color: #fff;
}
.active{
  color: #ccc;
  transition: .5s;
}
/* 歌曲内容 */
.content .music{
  padding: 30rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.music-image{
  width: 100%;
  height: 100%;
  flex: 5;
  border-radius: 20rpx;
}
.music-info{
  margin: 20rpx 0;
}
.music-info .music-title{
  font-size: 48rpx;
  font-weight: 700;
}
.music-info .music-name , 
.music-info .music-album{
  margin: 15rpx 0;
  font-size: 28rpx;
  color: #eee;
}

.music-lyric{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;

  overflow: hidden;
  color: #ccc;
}

.music-lyric-item{
  width: 690rpx;
  text-align: center;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 32rpx;
  color: #ff9a3c;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;

